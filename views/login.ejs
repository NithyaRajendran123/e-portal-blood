    <!--Login Form-->
    <div class="login-form">
      <form action="/login" method="POST" autocomplete="new-password">
        <h5 class="text-center">User</h5>
        <h3 class="text-center">Log in</h3>
        <div class="form-group">
          <input
            type="email"
            class="form-control"
            placeholder="Email"
            required="required"
            id="email"
            name="email"
            class="validate"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            class="form-control"
            placeholder="Password"
            required="required"
            id="password"
            name="password"
            class="validate"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-danger btn-block">Log in</button>
        </div>
        <div class="clearfix">
          <!-- <label class="float-left form-check-label"><input type="checkbox"> Remember me</label> -->
          <span>Don't have an account?</span
          ><a href="/register" class="float-right">Register</a>
        </div>
      </form>
      <!-- <p class="text-center"><a href="#">Create an Account</a></p> -->
    </div>

    <!--Login Form Close-->

