<nav class="mynav">
			<div class="nav-wrapper container"><img class="brand-logo" src="bbi-logo.png" alt="Universe">
				<a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
				<ul id="nav-mobile" class="right hide-on-med-and-down">
					<li><a class="btn transparent" href="/donate">Blood Bank</a></li>
					<li><a class="btn transparent" href="/adminlogout">Logout</a></li>
					<!-- <li><a class="btn transparent" href="/bank">Search Donors</a></li> -->
				</ul>
            </div>
